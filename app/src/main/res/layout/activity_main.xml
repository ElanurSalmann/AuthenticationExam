<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/createaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/abeezee"
        android:text="Create an account"
        android:textColor="#263D53"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullnametext"
            app:layout_constraintTop_toBottomOf="@id/createaccount"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textSize="18sp"
            android:alpha="0.6"
            />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/fullnametext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1EFEF"
        app:startIconCheckable="true"
        android:id="@+id/inputtext"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:textColor="#F1EFEF"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        app:layout_constraintTop_toBottomOf="@id/inputtext"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:textSize="18sp"
        android:alpha="0.6"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1EFEF"
        android:id="@+id/textlay"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your e-mail here"
           />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/textlay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:textSize="18sp"
        android:alpha="0.6"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1EFEF"
        android:id="@+id/textlay2"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Place your password here"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/cross1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cross"
        app:layout_constraintTop_toBottomOf="@id/textlay2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cross1"
        android:text="At least 8 characters"
        app:layout_constraintTop_toBottomOf="@id/textlay2"
        android:layout_marginTop="12dp"
        android:alpha="0.7"
        android:layout_marginStart="6dp"
        />

    <ImageView
        android:id="@+id/cross2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cross"
        app:layout_constraintTop_toBottomOf="@id/cross1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cross1"
        android:text="Both uppercase and lowercase characters"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="15dp"
        android:alpha="0.7"
        android:layout_marginStart="6dp"
        />
    <ImageView
        android:id="@+id/cross3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cross"
        app:layout_constraintTop_toBottomOf="@id/cross2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cross3"
        android:text="At least one number or symbol"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginTop="17dp"
        android:alpha="0.7"
        android:layout_marginStart="6dp"
        />
    <ImageView
        android:id="@+id/tick"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/tick"
        app:layout_constraintTop_toBottomOf="@id/cross3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
/>
    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By continuing you accept our Privacy Policy and\n Terms of Use"
        app:layout_constraintStart_toEndOf="@id/tick"
        app:layout_constraintTop_toBottomOf="@id/cross3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:alpha="0.6"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/privacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Sign up"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="#543AB1"
/>

    <TextView
        android:id="@+id/ortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

   <ImageView
        android:layout_width="30dp"
        android:id="@+id/google"
        android:layout_height="30dp"
        android:src="@drawable/google"
        app:layout_constraintTop_toBottomOf="@id/ortext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="7dp"/>
    <ImageView
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:src="@drawable/facebook"
        app:layout_constraintStart_toEndOf="@id/google"
        app:layout_constraintTop_toBottomOf="@id/ortext"
        android:layout_marginTop="7dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/abeezee"
        android:textColor="#263D53"/>
</androidx.constraintlayout.widget.ConstraintLayout>